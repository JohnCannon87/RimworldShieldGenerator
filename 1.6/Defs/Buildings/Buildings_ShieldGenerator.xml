<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>ShieldGenerator</defName>
        <label>shield generator</label>
        <description>A small wall mounted shield unit.</description>
        <rotatable>true</rotatable>
        <graphicData>
            <texPath>Buildings/WallShieldGen/WallShieldGen</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawOffsetNorth>(0,0,0.9)</drawOffsetNorth>
            <drawOffsetSouth>(0,0,-0.9)</drawOffsetSouth>
            <drawOffsetWest>(-0.9,0,0)</drawOffsetWest>
            <drawOffsetEast>(0.9,0,0)</drawOffsetEast>
            <damageData>
                <enabled>false</enabled>
            </damageData>
        </graphicData>
        <uiIconPath>Buildings/WallShieldGen/WallShieldGen_MenuIcon</uiIconPath>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <costList>
            <Uranium>250</Uranium>
            <Plasteel>200</Plasteel>
            <BroadshieldCore>5</BroadshieldCore>
            <ComponentSpacer>10</ComponentSpacer>
        </costList>
        <statBases>
            <WorkToBuild>3000</WorkToBuild>
            <MaxHitPoints>1000</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Mass>35</Mass>
        </statBases>
        <passability>Standable</passability>
        <pathCost>0</pathCost>
        <overrideMinifiedRot>North</overrideMinifiedRot>
        <minifiedDrawOffset>(0, 0, 0.2)</minifiedDrawOffset>
        <building>
            <isEdifice>false</isEdifice>
            <isAttachment>true</isAttachment>
        </building>
        <placeWorkers>
            <li>Placeworker_AttachedToWall</li>
            <li>RimworldShieldGenerator.PlaceWorker_OneShieldPerMap</li>
        </placeWorkers>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>200</basePowerConsumption>
            </li>
            <li Class="CompProperties_Breakdownable"/>
            <li Class="CompProperties_Flickable"/>
            <li Class="RimworldShieldGenerator.CompProperties_DynamicShieldEmitter"/>
        </comps>

        <thingCategories>
            <li>BuildingsSecurity</li>
        </thingCategories>        
        <tickerType>Normal</tickerType>
        <researchPrerequisites>
            <li>ShieldBelt</li>
        </researchPrerequisites>
        <drawOffscreen>true</drawOffscreen>
        <seeThroughFog>true</seeThroughFog>
        <drawerType>MapMeshAndRealTime</drawerType>
        
        <tradeTags>
            <li>GravshipUpgrade</li>
        </tradeTags>
        
        <terrainAffordanceNeeded>Substructure</terrainAffordanceNeeded>
        <designationCategory>Odyssey</designationCategory>
        <constructionSkillPrerequisite>18</constructionSkillPrerequisite>
        <clearBuildingArea>false</clearBuildingArea>
        <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
        <castEdgeShadows>false</castEdgeShadows>
        <minifiedDef>MinifiedThing</minifiedDef>
    </ThingDef>

</Defs>
